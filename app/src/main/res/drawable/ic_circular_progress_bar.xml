<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="@integer/circle_degree_270"
            android:toDegrees="@integer/circle_degree_270">
            <shape
                android:shape="ring"
                android:thicknessRatio="@integer/optimal_max_thickness_ratio_size"
                android:useLevel="false">
                <solid android:color="@color/colorAccentTransparent" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="@integer/circle_degree_270"
            android:toDegrees="@integer/circle_degree_270">
            <shape
                android:shape="ring"
                android:thicknessRatio="@integer/optimal_max_thickness_ratio_size"
                android:useLevel="true">
                <solid android:color="@color/colorAccent" />
            </shape>
        </rotate>
    </item>
</layer-list>