<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Clear">
        <item name="android:layout_width">@dimen/clear_size</item>
        <item name="android:layout_height">@dimen/clear_size</item>
    </style>

    <style name="AllMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AllWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchConstMatchParent">
        <item name="android:layout_width">@dimen/clear_size</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchConstWrapCont">
        <item name="android:layout_width">@dimen/clear_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParentMatchConst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/clear_size</item>
    </style>

    <style name="WrapContMatchConst">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/clear_size</item>
    </style>

    <style name="AllMatch.MediumSizeAllPad">
        <item name="android:padding">@dimen/constraint_bound_medium_size</item>
    </style>

    <style name="ImageFitXY" parent="Clear">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="CardViewImageContainer" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/normal_size</item>
        <item name="cardElevation">@dimen/extra_small_size</item>
    </style>

    <style name="CardViewImageContainer.LargeLayoutSize">
        <item name="android:layout_width">@dimen/large_layout_size</item>
        <item name="android:layout_height">@dimen/image_height_size</item>
    </style>

    <style name="CardListSizeWrap.MediumCardView" parent="CardViewImageContainer">
        <item name="android:layout_width">@dimen/film_card_view_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardListSizeWrap.MediumCardView.TopBotBarrier">
        <item name="android:layout_marginTop">@dimen/constraint_bound_medium_size</item>
        <item name="android:layout_marginBottom">@dimen/constraint_bound_medium_size</item>
    </style>

    <style name="Clear.ImageStartEndBarrier">
        <item name="android:layout_marginStart">@dimen/normal_size</item>
    </style>

    <style name="Clear.ImageStartEndBarrier.TheMovieDBLogo">
        <item name="srcCompat">@drawable/ic_the_movie_db_logo</item>
    </style>

    <style name="MediumProgressBar">
        <item name="android:layout_width">@dimen/progressbar_medium_size</item>
        <item name="android:layout_height">@dimen/progressbar_medium_size</item>
    </style>

    <style name="MediumProgressBar.GradientBackground">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:background">@drawable/ic_gradient_background</item>
        <item name="android:progressDrawable">@drawable/ic_circular_bad_film_score</item>
    </style>

    <style name="Clear.ProgressBarIndicatorText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Clear.ProgressBarIndicatorText.Font">
        <item name="android:fontFamily">@font/source_sans_pro_reg</item>
    </style>

    <style name="ButtonLayout" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonLayout.Barrier">
        <item name="android:layout_margin">@dimen/constraint_bound_medium_size</item>
        <item name="android:padding">@dimen/constraint_bound_small_size</item>
    </style>

    <style name="ButtonLayout.Barrier.Appearance">
        <item name="android:gravity">start</item>
        <item name="android:minHeight">@dimen/clear_size</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_condensed_reg</item>
    </style>

    <style name="ClearXWrap" parent="MatchConstWrapCont" />

    <style name="ClearXWrap.SansFontBold">
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="ClearXWrap.SansFontBold.StartBarrier">
        <item name="android:layout_marginStart">@dimen/normal_size</item>
    </style>

    <style name="ClearXWrap.SansFontBold.StartBarrier.DateAppearanceFormat">
        <item name="android:fontFamily">@font/source_sans_pro_reg</item>
        <item name="android:background">@drawable/ic_border_round</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAestheticBlack</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="ClearXWrap.SansFontBold.StartBarrier.TextAppearances">
        <item name="android:textColor">@color/colorAestheticBlack</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/int_5</item>
    </style>

    <style name="ClearXWrap.SansFontReg.AllPad" parent="ClearXWrap.SansFontBold.StartBarrier.TextAppearances">
        <item name="android:fontFamily">@font/source_sans_pro_reg</item>
        <item name="android:layout_marginStart">@dimen/clear_size</item>
        <item name="android:layout_marginEnd">@dimen/clear_size</item>
        <item name="android:padding">@dimen/normal_size</item>
    </style>

    <style name="ClearXWrap.SansFontReg.AllPad.TextAppearances">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:maxLines">@integer/int_3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClearXWrap.SansFontReg.AllPad.TextAppearances.FormatStyle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ClearXWrap.SansFontReg.AllPad.TextAppearances.FormatStyle.GrayColor">
        <item name="android:textColor">@color/colorSemiBlack</item>
    </style>

    <style name="AllWrap.RobotoFont" parent="ClearXWrap.SansFontBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_condensed_reg</item>
    </style>

    <style name="AllWrap.RobotoFont.TextAppearances">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance" parent="AllWrap.RobotoFont.TextAppearances" />

    <style name="AllWrap.RobotoFont.TextBlackBold" parent="ClearXWrap.SansFontBold.StartBarrier.TextAppearances">
        <item name="android:layout_marginStart">@dimen/clear_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_condensed_reg</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">@integer/int_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AllWrap.RobotoFont.TextBlackBold.GravityWithConfig">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/clear_size</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="AllWrap.RobotoFont.TextBlackBold.Barrier">
        <item name="android:layout_marginTop">@dimen/constraint_bound_medium_size</item>
        <item name="android:padding">@dimen/constraint_bound_small_size</item>
    </style>

    <style name="AllWrap.RobotoFont.TextAppearances.BorderedBackground">
        <item name="android:background">@drawable/ic_stroke_round</item>
    </style>

    <style name="AllWrap.RobotoFont.TextAppearances.ColoredBackground">
        <item name="android:textColor">@color/colorSemiWhite</item>
        <item name="android:background">@drawable/ic_border_round</item>
        <item name="android:backgroundTint">@color/colorAestheticBlack</item>
    </style>

    <style name="AllWrap.SansRegFont.TextAppearances" parent="TextAppearance">
        <item name="fontFamily">@font/source_sans_pro_reg</item>
        <item name="android:textColor">@color/colorAestheticBlack</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="AllWrap.SansFontBold.TextAppearances" parent="TextAppearance">
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textColor">@color/colorCountryCode</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="AllWrap.SansFontBold.TextAppearances.FormatSmallBlack">
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:textColor">@color/colorSemiBlack</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="AllWrap.SansFontBold.TextAppearances.FormatSmallBlack.TopBarrier">
        <item name="android:layout_marginTop">@dimen/normal_size</item>
    </style>

    <style name="AllWrap.SansFontBold.TextAppearances.ElevationBorderlessBackground">
        <item name="android:background">@drawable/ic_border_round</item>
        <item name="android:elevation">@dimen/mini_size</item>
    </style>

    <style name="ClearXWrap.BlackBackground">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ClearXWrap.BlackBackground.Elevation">
        <item name="elevation">@dimen/normal_size</item>
    </style>

    <style name="ClearXWrap.BlackBackground.Elevation.TabColor">
        <item name="tabIndicatorColor">@color/colorSemiWhite</item>
        <item name="tabRippleColor">@color/colorSemiWhite</item>
        <item name="tabTextColor">@color/colorSemiWhite</item>
    </style>

    <style name="AllWrap.WhiteBackground" parent="ClearXWrap.BlackBackground.Elevation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/colorSemiWhite</item>
    </style>

    <style name="AllWrap.WhiteBackground.MiniElevation">
        <item name="android:elevation">@dimen/extra_small_size</item>
    </style>

    <style name="AllWrap.WhiteBackground.MiniElevation.EndBarrier">
        <item name="android:layout_marginEnd">@dimen/constraint_bound_small_size</item>
    </style>

    <style name="MatchWrap.Gravity">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MatchWrap.Gravity.PaddBot">
        <item name="android:paddingBottom">@dimen/normal_size</item>
    </style>

    <style name="ClearXPosterSize.ImageFitXY" parent="ImageFitXY">
        <item name="android:layout_height">@dimen/list_film_poster_size</item>
    </style>

    <style name="ProgressBar" parent="MediumProgressBar.GradientBackground">
        <item name="android:elevation">@dimen/normal_size</item>
        <item name="android:padding">@dimen/normal_size</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="AllMatch.WhiteBackground">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ResourceImageSize">
        <item name="android:layout_width">@dimen/large_layout_size</item>
        <item name="android:layout_height">@dimen/large_layout_size</item>
    </style>

    <style name="ImageFavoriteSize">
        <item name="android:layout_width">@dimen/poster_favorite_width</item>
        <item name="android:layout_height">@dimen/poster_favorite_height</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ClearXWrap.StartBarrier">
        <item name="android:layout_marginStart">@dimen/large_attribute_size</item>
    </style>

    <style name="ClearXWrap.StartBarrier.TextAppearances">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">@integer/int_1</item>
        <item name="android:textColor">@color/colorSemiBlack</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="ClearXWrap.StartBarrier.TextAppearances.Format">
        <item name="android:layout_marginStart">@dimen/clear_size</item>
        <item name="android:fontFamily">@font/source_sans_pro_reg</item>
    </style>

    <style name="ClearXWrap.StartBarrier.TextAppearances.Format.Drawable">
        <item name="android:drawableEnd">@drawable/ic_favorite</item>
        <item name="android:drawablePadding">@dimen/normal_size</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Borderless.Size">
        <item name="android:minWidth">@dimen/clear_size</item>
        <item name="android:minHeight">@dimen/clear_size</item>
        <item name="android:padding">@dimen/clear_size</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Clear.Stroke">
        <item name="android:layout_height">@dimen/extra_small_size</item>
        <item name="android:background">@drawable/ic_dashed_stroke</item>
    </style>

    <style name="ClearXWrap.RadioButtonAppearances">
        <item name="android:letterSpacing">0.04</item>
        <item name="android:button">@drawable/br_button</item>
        <item name="android:background">@drawable/ic_radio_button</item>
        <item name="android:buttonTint">@color/colorRed</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="ClearXWrap.RadioButtonAppearances.BotBarrier">
        <item name="android:layout_marginBottom">@dimen/normal_size</item>
    </style>

    <style name="ClearXWrap.RadioButtonTitle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/colorAestheticBlack</item>
    </style>

    <style name="ClearXWrap.ImageView">
        <item name="android:background">@drawable/ic_round_button</item>
        <item name="layout_constraintHorizontal_weight">0.04</item>
    </style>

    <style name="ClearXWrap.ImageView.Close">
        <item name="android:backgroundTint">#FF4646</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="ClearXWrap.ImageView.Accept">
        <item name="android:src">@drawable/ic_checklist</item>
    </style>
</resources>