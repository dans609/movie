<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    style="@style/AllMatch.WhiteBackground"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/poster_film"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/poster_alita"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        tools:src="@drawable/poster_alita"/>

    <TextView
        android:id="@+id/film_name"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@id/poster_film"
        android:textSize="18sp"
        android:textColor="#505A64"
        android:lineSpacingMultiplier="1.1"
        android:letterSpacing="0.03"
        android:maxLines="1"
        android:maxLength="20"
        android:ellipsize="end"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/poster_film"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:text="@string/film_name"/>

    <TextView
        android:id="@+id/tv_description"
        app:layout_constraintStart_toStartOf="@id/film_name"
        app:layout_constraintEnd_toEndOf="@id/film_name"
        app:layout_constraintTop_toBottomOf="@id/film_name"
        android:fontFamily="@font/source_sans_pro_reg"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorRed"
        android:drawableEnd="@drawable/ic_favorite"
        android:layout_height="wrap_content"
        android:text="@string/movies2_overview"/>

    <TextView
        android:id="@+id/film_rating"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_reg"
        android:textSize="16sp"
        android:letterSpacing="0.05"
        android:textColor="@color/colorRed"
        app:layout_constraintStart_toStartOf="@id/film_name"
        android:layout_height="wrap_content"
        tools:text="Rating: 70"/>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.05"
        android:padding="@dimen/clear_size"
        android:textColor="@color/colorYellow"
        android:minWidth="@dimen/clear_size"
        android:minHeight="@dimen/clear_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/film_rating"
        app:layout_constraintBottom_toBottomOf="@id/film_rating"
        android:text="See Detail"  />

    <View
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/poster_film"
        app:layout_constraintEnd_toEndOf="@id/film_name"
        app:layout_constraintTop_toBottomOf="@id/poster_film"
        android:layout_marginTop="20dp"
        android:layout_height="5dp"
        android:background="@drawable/ic_dashed_stroke" />

</androidx.constraintlayout.widget.ConstraintLayout>